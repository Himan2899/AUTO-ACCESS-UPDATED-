# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = single
max_line_length = 100

# HTML files
[*.html]
indent_style = space
indent_size = 2
max_line_length = off

# CSS files
[*.{css,scss,sass}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf

# Documentation
[docs/**]
indent_style = space
indent_size = 2
max_line_length = off

# Tests
[tests/**]
indent_style = space
indent_size = 2

# Configuration files
[.editorconfig,.eslintrc,.prettierrc,.babelrc]
indent_style = space
indent_size = 2 